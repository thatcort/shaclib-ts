{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug main",
            "preLaunchTask": "compile",
            "program": "${workspaceRoot}/src/main.ts",
            "cwd": "${workspaceRoot}/compiled",
            "outFiles": ["${workspaceRoot}/compiled/**/*.js"],
            "sourceMaps": true,
            "runtimeArgs": [
                "--no-deprecation"
            ]
        }
    ]
}